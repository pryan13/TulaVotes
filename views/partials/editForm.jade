.container
	form(role='form')
		.form-group
			label(for='name') Name
			input(type='email', class='form-control', id="name", placeholder="Enter name")

		.form-group
			label(for='decription') Description
			textarea( class="form-control", id="decription", rows="3")
		.form-group
			label(for="type") Type
			select(class="form-control", id="type")
				option(value='') Please select...
				option(value='radio') Radio
				option(value='checkbox') Cehckbox
		.checkbox
			label Is Active
				input(type="checkbox")
		button(type="submit", class="btn btn-default") Submit